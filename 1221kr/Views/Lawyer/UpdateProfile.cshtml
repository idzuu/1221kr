@model _1221kr.Models.ApplicationUser
@{
    ViewBag.Title = "Редактирование профиля";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("UpdateProfile", "Lawyer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName)
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName)
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.LastName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Specialization)
        @Html.TextBoxFor(model => model.Specialization, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Education)
        @Html.TextAreaFor(model => model.Education, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group">
        <label>Фото профиля</label>
        <input type="file" name="photoFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="@Model.PhotoPath" class="img-thumbnail" style="max-height: 150px;" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    @Html.ActionLink("Отмена", "Profile", null, new { @class = "btn btn-default" })
}