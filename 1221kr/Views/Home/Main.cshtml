@{
    ViewBag.Title = "Main";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Юридический консалтинг онлайн</h1>
        <p class="lead">Профессиональная помощь юристов в любое время</p>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Profile", "Lawyer")" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body">
                        <h3><i class="bi bi-person-badge"></i> Личный кабинет</h3>
                        <p>Доступ к вашим делам и документам в одном месте</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <a href="@Url.Action("Index", "File")" class="text-decoration-none">
                    <div class="card-body">
                        <h3><i class="bi bi-files"></i> Документооборот</h3>
                        <p>Безопасное хранение и обмен документами</p>
                    </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <a href="@Url.Action("AllConsultations", "Consultation")" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body">
                        <h3><i class="bi bi-chat-square-text"></i> Все консультации</h3>
                        <p>Просмотр доступных консультаций всех юристов</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3><i class="bi bi-calendar-check"></i> Запись на прием</h3>
                    <p>Онлайн-запись к выбранному специалисту</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Секция с популярными консультациями -->
<div class="container mt-5">
    <h2 class="mb-4"><i class="bi bi-star-fill text-warning"></i> Популярные консультации</h2>
    <div class="row">
        @if (ViewBag.PopularConsultations != null)
        {
            foreach (var consultation in ViewBag.PopularConsultations)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4>@consultation.Title</h4>
                            <p class="text-muted">@consultation.LawyerName</p>
                            <p>@consultation.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">@consultation.Type</span>
                                <span class="text-success fw-bold">@consultation.Price.ToString("N0") ₽</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("Details", "Consultation", new { id = consultation.Id })"
                               class="btn btn-sm btn-outline-primary">Подробнее</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
        border: none;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

        .card h3 i, .card h4 i {
            margin-right: 10px;
            color: #0d6efd;
        }

    .card-footer {
        border-top: 1px solid rgba(0,0,0,0.05);
    }
</style>

@section Scripts {
    <script>
        // Инициализация tooltip для карточек
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}