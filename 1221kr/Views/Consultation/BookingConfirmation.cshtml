@model _1221kr.Models.ConsultationBooking
@{
    ViewBag.Title = "Подтверждение записи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h2>Запись подтверждена</h2>
        </div>
        <div class="card-body">
            <p>Ваша запись на консультацию успешно создана.</p>
            <p>Номер брони: <strong>@Model.Id</strong></p>
            <p>Дата: <strong>@Model.SelectedDate.ToString("dd.MM.yyyy HH:mm")</strong></p>
            <a href="@Url.Action("Details", "Consultation", new { id = Model.ConsultationId })" class="btn btn-primary">
                Вернуться к консультации
            </a>
        </div>
    </div>
</div>