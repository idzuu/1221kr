@model _1221kr.Models.ConsultationBooking
@{
    ViewBag.Title = "Подтверждение записи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card text-center">
        <div class="card-header bg-success text-white">
            <h2><i class="bi bi-check-circle"></i> Запись подтверждена</h2>
        </div>
        <div class="card-body">
            @if (Model.Consultation != null)
            {
                <h4>Консультация: @Model.Consultation.Title</h4>
                <p class="lead">С юристом: @(Model.Consultation.Lawyer?.FirstName ?? "Неизвестно") @(Model.Consultation.Lawyer?.LastName ?? "")</p>
            }

            <div class="alert alert-info mt-4">
                <h5><i class="bi bi-calendar-event"></i> Дата консультации:</h5>
                <p class="h4">@Model.SelectedDate.ToString("f")</p>
            </div>

            <p>Статус: <span class="badge bg-info">@Model.Status</span></p>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="alert alert-light mt-3">
                    <h5>Ваши комментарии:</h5>
                    <p>@Model.Notes</p>
                </div>
            }

            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="bi bi-house"></i> Вернуться на главную
            </a>
        </div>
    </div>
</div>